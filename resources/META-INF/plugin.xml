<idea-plugin>
    <id>com.daniel-espinoza.inline-error</id>
    <name>InlineError</name>
    <version>0.0.1-SNAPSHOT</version>
    <vendor>Daniel Espinoza</vendor>

    <depends>com.intellij.modules.platform</depends>

    <description>Plugin for displaying errors message in the editor; inspired by Alexander's VSCode extension Error Lens (https://marketplace.visualstudio.com/items?itemName=usernamehw.errorlens)</description>

    <idea-version since-build="211.0"/>

    <actions>
        <action class="com.daniel_espinoza.inline_error.InlineErrorAction"
                id="com.daniel_espinoza.inline_error.InlineErrorAction"/>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <psi.treeChangeListener implementation="com.daniel_espinoza.inline_error.InlineError"
                                id="com.daniel_espinoza.inline_error.InlineErrorListener"/>
        <applicationConfigurable parentId="appearance"
                                 id="com.daniel_espinoza.inline_error.settings.InlineErrorConfigurable"
                                 displayName="Inline Error"
                                 instance="com.daniel_espinoza.inline_error.settings.InlineErrorConfigurable"/>
        <applicationService serviceImplementation="com.daniel_espinoza.inline_error.settings.InlineErrorState"/>
    </extensions>

</idea-plugin>
